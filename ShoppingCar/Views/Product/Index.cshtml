<script>
    function Delete(id)
    {
        var msg = "您真的確定要刪除嗎？\n\n請確認！";
        if (confirm(msg) == false) {
            return;
        }
        $.ajax({
            url: `/Product/Delete?Id=${id}`,
             type: "post",
             success: function (data) {
             alert('刪除成功');
             window.location.reload();
            }.bind(this),
             error: function (data) {
             alert('刪除失敗');
            }.bind(this)
        });

    }
</script>
